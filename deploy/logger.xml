<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
      <file>/opt/hub3/narthex/NarthexFiles/logs/narthex.log</file>
    <encoder>
        <pattern>%date - %level %logger{15} - %message%n%xException{10}</pattern>
    </encoder>
  </appender>


  <root level="WARN">
    <appender-ref ref="FILE" />
  </root>

</configuration>
